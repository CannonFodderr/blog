<% include ../partials/header %>
<div class="ui text container">
    <h1>Write a new post</h1>
    <form class="ui form" action="/blog" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]">
        </div>
        <div class="field">
                <label>Description</label>
                <input type="text" name="post[description]">
        </div>
        <div class="field">
                <label>Image URL</label>
                <input type="text" name="post[image]">
        </div>
        <div class="field">
                <label>Content</label>
                <textarea name="post[body]">Write something awesome..</textarea>
        </div>
        <button class="ui blue button">Submit</button>
    </form>
</div>
<% include ../partials/footer %>