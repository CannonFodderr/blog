<% include ../partials/header %>
<div class="ui text container">
    <h1>Write a new post</h1>
    <form class="ui form" action="/blog/<%= post._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" value="<%= post.title %>">
        </div>
        <div class="field">
                <label>Description</label>
                <input type="text" name="post[description]" value="<%= post.description %>">
        </div>
        <div class="field">
                <label>Image URL</label>
                <input type="text" name="post[image]" value="<%= post.image %>">
        </div>
        <div class="ui segment">
            <div class="field">
                <label>Current Image</label>
                <img class="image" src="<%= post.image %>">
            </div>
        </div>
        <div class="field">
                <label>Content</label>
                <textarea name="post[body]"><%= post.body %>"</textarea>
        </div>
        <button class="ui blue button">Submit</button>
    </form>
</div>
<% include ../partials/footer %>